set nu
set autoindent
set ts=2
set expandtab
set shiftwidth=2
set hlsearch
set ruler
set splitbelow
set splitright
set autochdir

syntax on
filetype indent plugin on
hi Search cterm=NONE ctermfg=grey ctermbg=yellow
set smartindent
set smarttab
let &colorcolumn="88,".join(range(400,999),",")
highlight ColorColumn ctermbg=0

set textwidth=88
set fo+=t
set fo-=l

map j g<Down>
map k g<Up>

