# This file should go into VsCode's settings.json.
#
# To open that file:
#   Shift + Cmd + P
#   >Preferences: Open User Setting (JSON)
#

{
    "workbench.startupEditor": "none",
    "workbench.preferredDarkColorTheme": "Default Dark+ Experimental",
    "workbench.preferredLightColorTheme": "Default Dark+ Experimental",
    "editor.minimap.showSlider": "always",
    "workbench.tree.renderIndentGuides": "always",
    "editor.minimap.enabled": false,
    "[python]": {
        "editor.formatOnType": true,
        "diffEditor.codeLens": false
    },
    "files.autoSave": "afterDelay",
    "editor.rulers": [
        88,
    ],
    "notebook.output.textLineLimit": 1000,
    "notebook.output.scrolling": true,
    "notebook.lineNumbers": "on",
    "files.trimTrailingWhitespace": true,
    "workbench.editor.revealIfOpen": true,
    "python.analysis.extraPaths": [],
    "workbench.colorTheme": "Monokai",
    "diffEditor.ignoreTrimWhitespace": false,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "jupyter.askForKernelRestart": false,

    "vim.camelCaseMotion.enable": true,
    "vim.foldfix": true,
    "vim.hlsearch": true,
    "vim.useCtrlKeys": true,
    "vim.whichwrap": "b,w",
    "vim.autoSwitchInputMethod.enable": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<C-u>"],
            "after": ["2", "0", "k"]
        },
        {
            "before": ["<C-d>"],
            "after": ["2", "0", "j"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["<C-u>"],
            "after": ["2", "0", "k"]
        },
        {
            "before": ["<C-d>"],
            "after": ["2", "0", "j"]
        }
    ],
}
